# =============================================================================
# Retail Analytics Assistant - Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# LLM Provider Configuration (choose one)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# TOGETHER_API_KEY=your_together_api_key_here

# LLM Model Selection
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Options: sqlite, databricks
DATABASE_TYPE=sqlite
DATABASE_PATH=data/retail_lakehouse.db

# Databricks Configuration (if DATABASE_TYPE=databricks)
# DATABRICKS_HOST=your-workspace.cloud.databricks.com
# DATABRICKS_TOKEN=dapi1234567890abcdef
# DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/abc123
# DATABRICKS_CATALOG=retail
# DATABRICKS_SCHEMA=analytics

# -----------------------------------------------------------------------------
# A2A Agent Ports
# -----------------------------------------------------------------------------
A2A_REGISTRY_PORT=8000
ORCHESTRATOR_PORT=8000
DATA_DISCOVERY_PORT=8001
SQL_GENERATION_PORT=8002
ANALYSIS_PORT=8003
SYNTHESIS_PORT=8004

# -----------------------------------------------------------------------------
# MLflow Configuration (optional)
# -----------------------------------------------------------------------------
MLFLOW_TRACKING_URI=mlruns
MLFLOW_EXPERIMENT_NAME=retail-analytics-agents

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
